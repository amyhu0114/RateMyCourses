<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Make Course</title>
    <!-- load local stylesheet (css) -->
    <link rel="stylesheet" href="/styles.css" />
    <!-- loading jquery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
</head>
<body>
   <%- include("partials/navbar.ejs", {loggedIn: loggedIn}) %>
   <%- include("partials/flashes.ejs") %>
    <h1>Submit a Course</h1>

<form id="inputCourse"
      method="POST"
      action="/inputCourse/">
     <label>Course ID:  
     <input placeholder=123" name="courseId"></label><br><br>
     <label>Course Name:  
     <input placeholder="Databases with Web Interfaces" name="courseName"></label><br><br> 
     <label>Course Code:  
     <input placeholder="CS304" name="courseCode" id = "courseCode"></label><br><br>
     <label>Department:  
     <Select name = department>
        <% departments.forEach( (department) => {%>
            <option value = <%= department.departmentId %>><%= department.departmentName %></option>
        <% }); %>
     </Select></label><br><br>
  <p><button type="submit">Submit</button></p>
</form>
<script>
    submit.addEventListener("click", validate);

    function validate(e) {
        e.preventDefault();

        const courseCode = document.getElementById("courseCode");
        let valid = true;

        if (courseCode.value.indexOf(" ")!=-1) {
            req.flash('error', 'Invalid stuff');
        }
        return valid;
    }
</script>

    <!-- load local js -->
    <script src="/main.js"></script>
</body>
</html>